{
  "version": 2,
  "builds": [
    {
      "src": "api/socket-handler.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/.*",
      "dest": "/api/socket-handler.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
